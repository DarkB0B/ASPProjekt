@model AspProj10.Models.Post

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditP" asp-controller="Post" method="post">
            <div  class="text-danger"></div>
            
             <input asp-for="Id" class="form-control" type="hidden" />
             <input asp-for="DateOfAdd" class="form-control" type="hidden" />
             <input asp-for="LikeAmmount" class="form-control" type="hidden" />
             <input asp-for="Category" class="form-control" type="hidden" />
             <input asp-for="Comments" class="form-control" type="hidden" />
             <input asp-for="CategoryId" class="form-control" type="hidden" />
             <input asp-for="ImageFile" class="form-control" type="hidden" />
             <input asp-for="ImageName" class="form-control" type="hidden" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">Back to List</a>
</div>

@section Scripts {
