@model IQueryable<ASPProjekt.Models.Post>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>Lista książek</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                Tytuł:
            </th>
            <th>
                Autor:
            </th>
            <th>
                Data publikacji:
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in @Model)
        {
        <tr>
            <td>
                @post.Title
            </td>           
            <td>
                <a asp-controller="Post" asp-action="EditForm" asp-route-id="@post.Id">Edytuj</a>
                <a asp-controller="Post" asp-action="DeleteConfirm" asp-route-id="@post.Id">Usuń</a>
                <a asp-controller="Post" asp-action="Details" asp-route-id="@post.Id">Szczegóły</a>
            </td>
        </tr>
        }
    </tbody>
</table>